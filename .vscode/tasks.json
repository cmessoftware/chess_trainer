{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "üöÄ ML Workflow: Start MLflow Server",
			"type": "shell",
			"command": "docker-compose up -d mlflow",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "üìä ML Workflow: Start All Services",
			"type": "shell",
			"command": "docker-compose up -d",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "üî¨ ML Workflow: Execute Training Notebook",
			"type": "shell",
			"command": "docker-compose exec notebooks jupyter nbconvert --execute --to notebook --inplace /notebooks/ml_workflow_integrated.ipynb",
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "üåê ML Workflow: Open MLflow UI",
			"type": "shell",
			"command": "start http://localhost:5000",
			"group": "none",
			"isBackground": false,
			"problemMatcher": [],
			"windows": {
				"command": "cmd",
				"args": [
					"/c",
					"start",
					"http://localhost:5000"
				]
			}
		},
		{
			"label": "üîç ML Workflow: View Docker Logs",
			"type": "shell",
			"command": "docker-compose logs -f mlflow",
			"group": "none",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "üõë ML Workflow: Stop All Services",
			"type": "shell",
			"command": "docker-compose down",
			"group": "none",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "üßπ ML Workflow: Clean and Restart",
			"type": "shell",
			"command": "docker-compose down && docker-compose up -d",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}