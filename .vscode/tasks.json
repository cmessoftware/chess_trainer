{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "üîÑ ML Workflow: Initialize MLflow Integrated",
			"type": "shell",
			"command": "docker-compose up -d notebooks && sleep 10 && echo 'MLflow integrado iniciado con Jupyter'",
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "üöÄ ML Workflow: Start Notebooks with MLflow",
			"type": "shell",
			"command": "docker-compose up -d notebooks",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "üìä ML Workflow: Start All Services",
			"type": "shell",
			"command": "docker-compose up -d",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "üî¨ ML Workflow: Execute Training Notebook",
			"type": "shell",
			"command": "docker-compose exec notebooks jupyter nbconvert --execute --to notebook --inplace /notebooks/ml_workflow_integrated.ipynb",
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "üåê ML Workflow: Open MLflow UI",
			"type": "shell",
			"command": "start http://localhost:5000",
			"group": "none",
			"isBackground": false,
			"problemMatcher": [],
			"windows": {
				"command": "cmd",
				"args": [
					"/c",
					"start",
					"http://localhost:5000"
				]
			}
		},
		{
			"label": "üîç ML Workflow: View Notebooks Logs",
			"type": "shell",
			"command": "docker-compose logs -f notebooks",
			"group": "none",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "üõë ML Workflow: Stop All Services",
			"type": "shell",
			"command": "docker-compose down",
			"group": "none",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "üßπ ML Workflow: Clean and Restart",
			"type": "shell",
			"command": "docker-compose down && docker-compose up -d",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "üî¨ ML Workflow: Test MLflow Integration",
			"type": "shell",
			"command": "docker-compose exec notebooks python /notebooks/src/ml/mlflow_complete_tutorial.py",
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "üßπ ML Workflow: Cleanup SQLite File",
			"type": "shell",
			"command": "docker-compose exec notebooks python /notebooks/src/ml/cleanup_mlflow_sqlite.py",
			"group": "none",
			"isBackground": false,
			"problemMatcher": []
		}
	]
}